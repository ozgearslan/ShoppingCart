<core:View controllerName="sap.ui.demo.myFiori.view.Detail"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns="sap.m"
	displayBlock="true" xmlns:core="sap.ui.core">
	<Page title="{Name}" id="page">


		<f:SimpleForm id="formid" minWidth="1024"
			maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
			labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1"
			columnsM="1" class="welcomeText">
			<f:content >
		
				<Label text="Name"   />
				<Text text="{Name}"  />
				<Label text="ShortDescription" />
				<Text text="{ShortDescription}" />
				<Label text="Weight" />
				<Text text="{Weight}" />
				<Label text="Price" />
				<Text text="{Price} EUR" />
			</f:content>
		</f:SimpleForm>
		<Panel>
			<VBox alignItems="Center">
				<Image src="{PictureUrl}" decorative="true" densityAware="false" />
			</VBox>
			
			<Text text="ddd" id="txt" class="invisible"></Text>
		</Panel>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page>
</core:View>